{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "dist/**"]
		},
		"ci:test:unit": {
			"outputs": [],
			"inputs": ["**/*.tsx", "**/*.ts", "**/*.test.tsx", "**/*.test.ts"]
		},
		"ci:test:integration": {
			"outputs": [],
			"inputs": ["**/*.tsx", "**/*.ts", "**/*.test.tsx", "**/*.test.ts"]
		},
		"test": {
			"cache": false
		},
		"dev": {
			"cache": false
		},
		"gen": {
			"cache": false,
			"outputs": ["**/.generated/*.ts"]
		},
		"preview": {
			"cache": false
		},
		"link": {
			"cache": false
		},
		"typecheck": {
			"outputs": [],
			"inputs": ["**/*.tsx", "**/*.ts", "tsconfig.json"]
		}
	}
}
