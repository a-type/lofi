{
	"name": "@verdant-web/scratchpad",
	"type": "module",
	"dependencies": {
		"@verdant-web/cli": "workspace:*",
		"@verdant-web/server": "workspace:*",
		"@verdant-web/store": "workspace:*",
		"@types/express": "^4.17.14",
		"concurrently": "^7.5.0",
		"express": "^4.18.2",
		"gfynonce": "^1.0.2",
		"tsx": "^4.6.2",
		"typescript": "^4.9.3",
		"vite": "^3.2.4"
	},
	"scripts": {
		"dev": "concurrently \"pnpm run dev:app\" \"pnpm run dev:server\"",
		"dev:app": "vite",
		"dev:server": "tsx watch server.ts",
		"generate": "verdant --schema ./src/schema.ts --output ./src/client",
		"preflight": "verdant-preflight --output ./src/client"
	}
}
