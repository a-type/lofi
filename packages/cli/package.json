{
	"name": "@verdant-web/cli",
	"version": "3.0.0",
	"description": "Schema management tools for verdant",
	"type": "module",
	"bin": {
		"verdant": "dist/bin/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/",
		"src/"
	],
	"scripts": {
		"build": "tsc",
		"link": "pnpm link --global",
		"test": "tsx ./src/bin/index.ts",
		"test2": "tsx ./src/bin/index.ts -s ./test2/schema.ts -o ./test2/.generated"
	},
	"dependencies": {
		"@clack/prompts": "^0.5.1",
		"@swc/core": "^1.3.8",
		"change-case": "^4.1.2",
		"esbuild": "^0.19.5",
		"prettier": "^3.0.3",
		"yargs": "^17.6.0"
	},
	"devDependencies": {
		"@types/estree": "^1.0.1",
		"@types/yargs": "^17.0.29",
		"@verdant-web/common": "workspace:*",
		"@verdant-web/react": "workspace:*",
		"@verdant-web/store": "workspace:*",
		"fake-indexeddb": "^4.0.0",
		"jsdom": "^20.0.0",
		"rimraf": "^5.0.5",
		"tsx": "^3.14.0",
		"typescript": "^4.7.4",
		"vitest": "^0.24.3"
	}
